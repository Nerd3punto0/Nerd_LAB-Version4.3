<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jhonlopera.nerd30"
    android:installLocation="preferExternal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-feature android:name="android.hardware.location.gps"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistroActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PuntajeActivity"
            android:label="@string/title_activity_creditos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PrincipalActivity"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--<activity
            android:name=".TopoActivity"
            android:theme="@style/AppTheme.NoActionBar" />-->
        <activity
            android:name=".SustoActivity"
            android:label="Te lo adverti"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".ConcentreseActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps">
            <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_maps_key" />

        </activity>

        <activity
            android:name=".TopoActivity"
            android:parentActivityName=".PrincipalActivity">
        </activity>

        <activity
            android:name=".CuatroImagenesActivity"
           android:parentActivityName=".PrincipalActivity"
            android:theme="@style/AppTheme">

        </activity>
    </application>

</manifest>